{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Landing page for trillo",
  "main": "index.js",
  "scripts": {
    "start": "node-sass --recursive --watch sass/main.scss -o css",
    "compile:sass:compressed": "node-sass --output-style compressed sass/main.scss > css/style.css",
    
    "compile:sass": "node-sass sass/main.scss > css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass --output-style compressed css/style.prefix.css > css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Chris",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concat": "^1.0.3",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0"
  }
}